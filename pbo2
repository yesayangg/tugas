class BangunDatar {
    double luas() {
        return 0;
    }

    double keliling() {
        return 0;
    }
}

class Persegi extends BangunDatar {
    double sisi;

    Persegi(double sisi) {
        this.sisi = sisi;
    }

    @Override
    double luas() {
        return sisi * sisi;
    }

    @Override
    double keliling() {
        return 4 * sisi;
    }
}

class Lingkaran extends BangunDatar {
    double r;

    Lingkaran(double r) {
        this.r = r;
    }

    @Override
    double luas() {
        return Math.PI * r * r;
    }

    @Override
    double keliling() {
        return 2 * Math.PI * r;
    }
}

class Segitiga extends BangunDatar {
    double alas, tinggi;

    Segitiga(double alas, double tinggi) {
        this.alas = alas;
        this.tinggi = tinggi;
    }

    @Override
    double luas() {
        return 0.5 * alas * tinggi;
    }

    @Override
    double keliling() {
        return alas + tinggi + Math.sqrt(alas * alas + tinggi * tinggi); // Menggunakan teorema Pythagoras untuk segitiga siku-siku
    }
}

public class Polimorfisme {
    public static void main(String[] args) {
        BangunDatar p = new Persegi(4);
        BangunDatar l = new Lingkaran(7);
        BangunDatar s = new Segitiga(3, 4);

        System.out.println("Luas Persegi: " + p.luas());
        System.out.println("Keliling Persegi: " + p.keliling());

        System.out.println("Luas Lingkaran: " + l.luas());
        System.out.println("Keliling Lingkaran: " + l.keliling());

        System.out.println("Luas Segitiga: " + s.luas());
        System.out.println("Keliling Segitiga: " + s.keliling());
    }
}
